<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/tab">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@mipmap/icon_sys"
            android:id="@+id/iv_abcd" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="菜品分类"
            android:textColor="#20a95b"
            android:layout_alignBottom="@+id/iv_abcd"
            android:layout_toRightOf="@+id/iv_abcd"
            android:layout_toEndOf="@+id/iv_abcd" />
    </RelativeLayout>
    <GridView
        android:id="@+id/gv_home"
        android:listSelector="#00000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="20dp"
        android:numColumns="2" >
    </GridView>

</LinearLayout>