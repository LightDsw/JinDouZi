<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_head_root"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/tab_jiesuan"
                android:gravity="center_vertical">

    <!--左侧按钮-->
    <Button
        android:id="@+id/title_bar_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/icon_arrow"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        />
    <!--中间文字-->
    <TextView
        android:id="@+id/title_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/tab_unchecked_color"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/title_bar_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="16dp"
        />


</RelativeLayout>